class Solution {
public:
    int leastInterval(vector<char>& tasks, int n) {
           
          map<char,int>freq;

          int maxfrequency=0;

          for(auto it:tasks)
          {
              freq[it]++;

              maxfrequency=max(maxfrequency,freq[it]);
          } 


          int ans=(maxfrequency-1)*(n+1);

          for(auto it:freq)
          {
              if(it.second==maxfrequency)
              {
                  ans++;
              }
          }


          return max(ans,int(tasks.size()));
    }
};
